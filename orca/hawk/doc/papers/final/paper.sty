\newcommand{\IncludeFigure}[2]{
\begin{figure} 
\begin{center} 
\includegraphics[scale=0.75]{eps/#1.eps} 
\end{center}
\caption{\label{fig:#1} #2}
\end{figure}
}

\newcommand{\IncludeTexFigure}[2]{
\begin{figure} 
\begin{center} 
\scalebox{0.75}{\input{#1.pstex_t}}
\end{center}
\caption{\label{fig:#1} #2}
\end{figure}
}

\newcommand{\IncludePlot}[2]{
% inserts one plot
\begin{figure} 
\begin{center} 
\includegraphics[scale=0.75]{plots/#1.eps} 
\end{center}
\caption{\label{plot:#1} #2}
\end{figure}
}

\newcommand{\IncludeFourPlots}[4]{
% inserts four plots next to each other
{ \renewcommand{\baselinestretch}{1} \small
\begin{figure} 
  \begin{center}
     \includegraphics[scale = 0.6]{plots/#2.eps} \includegraphics[scale = 0.6]{plots/#2.spd.eps}

     \includegraphics[scale = 0.6]{plots/#3.eps} \includegraphics[scale = 0.6]{plots/#3.spd.eps}
     
  \end{center}
\caption{\label{plot:#1} #4}
\end{figure}
}}

\newcommand{\IncludeTwoPlots}[4]{
% inserts two plots next to each other
{ \renewcommand{\baselinestretch}{1} \small
\begin{figure}
  \begin{center}
     \includegraphics[scale = 0.62]{plots/#2.eps} \includegraphics[scale = 0.62]{plots/#3.eps}
  \end{center}
\caption{\label{plot:#1} #4}
\end{figure}
}}
 
